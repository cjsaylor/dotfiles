[user]
	name = Chris Saylor
	email = cjsaylor@gmail.com
[alias]
	caa = commit -a --amend -C HEAD
	stat = status
	co = checkout
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[advice]
	statusHints = false
[difftool]
	prompt = false
[merge]
	stat = true
[core]
	excludesfile = /Users/cjsaylor/.gitignore_global
